{
  "name": "koda-frontend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,scss,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,css,scss,json}\"",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "test:e2e": "npx playwright test --reporter=html",
    "test:e2e-ui": "npx playwright test --reporter=html && npx playwright show-report",
    "test:e2e-headed": "npx playwright test --headed --reporter=html",
    "test:e2e-debug": "npx playwright test --debug",
    "test:functional-only": "npx playwright test tests/functional/ --reporter=html",
    "test:monkey-only": "npx playwright test tests/monkey/ --reporter=html",
    "test:all-e2e": "npm run test:functional && npm run test:monkey",
    "test:functional": "node scripts/run-functional-only.js",
    "test:monkey": "node scripts/run-monkey-only.js",
    "test:pwa": "node scripts/run-tests.js",
    "test:chaos": "npx playwright test tests/monkey/chaos.spec.ts --reporter=html",
    "test:stress": "npx playwright test tests/monkey/stress.spec.ts --reporter=html",
    "test:network": "npx playwright test tests/monkey/network-chaos.spec.ts --reporter=html",
    "test:memory": "npx playwright test tests/monkey/memory-leak.spec.ts --reporter=html",
    "test:ui-chaos": "npx playwright test tests/monkey/ui-chaos.spec.ts --reporter=html",
    "test:report": "npx playwright show-report",
    "test:clean": "rm -rf test-results/ playwright-report/",
    "test:chrome": "npx playwright test --project=chromium --reporter=html",
    "test:mobile": "npx playwright test --project=\"Mobile Chrome\" --reporter=html",
    "test:parallel": "npx playwright test --workers=4 --reporter=html",
    "test:sequential": "npx playwright test --workers=1 --reporter=html"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@rollup/rollup-darwin-arm64": "^4.40.0",
    "@stomp/stompjs": "7.1.1",
    "axios": "^1.8.4",
    "formik": "^2.4.6",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.477.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.2.0",
    "react-slick": "^0.30.3",
    "slick-carousel": "^1.8.1",
    "sockjs-client": "1.6.1",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/js": "^9.17.0",
    "@playwright/test": "^1.53.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/leaflet": "^1.9.16",
    "@types/node": "^22.15.24",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@types/react-slick": "^0.23.13",
    "@types/sockjs-client": "^1.5.4",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.2.3",
    "@vitest/ui": "^3.2.3",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.13.0",
    "gremlins.js": "^2.2.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "process": "^0.11.10",
    "sass": "^1.85.1",
    "sonarqube-scanner": "^4.3.0",
    "stream-browserify": "^3.0.0",
    "tailwindcss": "^4.0.9",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.1",
    "util": "^0.12.5",
    "vite": "^6.0.3",
    "vitest": "^3.2.3"
  }
}
